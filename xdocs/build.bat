rem =====================================================================
rem  Resolve the jdk home directory
rem =====================================================================

set jdkhome=%JAVA_HOME%

rem =====================================================================
rem  build classpath
rem =====================================================================

set LIBPATH=..\lib\ant

set LCP=%jdkhome%\lib\tools.jar
for /R "%LIBPATH%" %%i in (*.jar) do call lcp.bat %%i


rem =====================================================================
rem  run ant
rem =====================================================================

%jdkhome%\bin\java -cp %LCP% org.apache.tools.ant.Main %1 %2 %3 %4 %5 %6 %7 %8 %9


rem =====================================================================
rem  bye
rem =====================================================================

set LCP=
	
